<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="FlatButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorButtonNormal">?background</item>
    </style>

    <style name="CommonButton.Blue">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="CommonButton.Yellow">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="background">@color/colorAccent</item>
    </style>

</resources>
